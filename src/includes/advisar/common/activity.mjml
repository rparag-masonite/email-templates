<mjml>
  <mj-head>
   <mj-include path="../header.mjml" />
  </mj-head>
  <mj-body>
  <mj-section background-color="transparent"></mj-section>
  <mj-include path="../logo-section.mjml" />
    <mj-section mj-class="header__primary">
    <mj-column>
      <mj-text mj-class="u-text--subtitle">Account information</mj-text>
      <mj-text mj-class="u-text--title">Today's Activity</mj-text>
      <mj-text mj-class="u-text--multi u-text--center">Below is a simple breakdown of your company's activity this week.
      </mj-text>
      <mj-table mj-class="table">
          <tr style="border: 1px solid #C6C6C6; margin-bottom: 10px;">
            <td style="padding: 10px;"><strong style="font-weight: 400; font-size: 16px;">New Orders</strong></td>
            <td style="color:#000000; font-weight: 700; text-align: right; padding: 10px;">5</td>
          </tr>
          <tr style="border: 1px solid #C6C6C6; margin-bottom: 10px;">
            <td style="padding: 10px;"><strong style="font-weight: 400; font-size: 16px;">New Quotes</strong></td>
            <td style="color:#000000; font-weight: 700; text-align: right; padding: 10px;">12</td>
          </tr>
          <tr style="border: 1px solid #C6C6C6; margin-bottom: 10px;">
            <td style="padding: 10px;"><strong style="font-weight: 400; font-size: 16px;">New Users</strong></td>
            <td style="color:#000000; font-weight: 700; text-align: right; padding: 10px;">2</td>
          </tr>
        </mj-table>
        <mj-divider border-color="#c6c6c6" border-width="1px" />
        <mj-table mj-class="table">
          <tr style="border: 1px solid #C6C6C6; margin-bottom: 10px;">
            <td style="padding: 10px;"><strong style="font-weight: 400; font-size: 16px;">Total Completed Orders</strong></td>
            <td style="color:#000000; font-weight: 700; text-align: right; padding: 10px;">$12,345</td>
          </tr>
          <tr style="border: 1px solid #C6C6C6; margin-bottom: 10px;">
            <td style="padding: 10px;"><strong style="font-weight: 400; font-size: 16px;">Total Added Quotes</strong></td>
            <td style="color:#000000; font-weight: 700; text-align: right; padding: 10px;">$98,765</td>
          </tr>
        </mj-table>
      <mj-button mj-class="button button--secondary" href="https://google.com">
        Go to dashboard
      </mj-button>
    </mj-column>
    </mj-section>
    <mj-include path="../footer.mjml" />
  </mj-body>
</mjml>
